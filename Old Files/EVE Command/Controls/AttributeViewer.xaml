<UserControl x:Class="AttributeViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" MaxWidth="24" MaxHeight="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3" Source="{DynamicResource imgAttributesIcon}"/>
        <Label Grid.Column="1" Grid.Row="0" Padding="5,2,5,0">Attribute</Label>
        <Label Grid.Column="1" Grid.Row="1" Padding="5,0,5,2">points</Label>
    </Grid>
</UserControl>
